<h3>Subscribe for updates</h3></br>
<table class="table table-bordered table-striped table-hover" style="margin: 0 auto">
	<tr>
		<th></th>
		{{#each contactMethods}}
			<th class="contact-method">
				{{#if email}}
					{{email}}
				{{else}}
					{{#if phoneNumber}}
						{{#if provider}}
							{{phoneNumber}}  ({{provider}})
						{{/if}}
					{{/if}}
				{{/if}}
			</th>
		{{/each}}
	</tr>
	{{#each categories}}
		<tr>
			<td>{{name}}</td>
			{{#each ../contactMethods}}
				<td class="settings-category-cell">
					<input type="checkbox" class="settings-category-checkbox" data-contactmethodid="{{pk}}" data-categoryid="{{../pk}}">
				</td>
			{{/each}}
		</tr>
	{{/each}}
	<tr>
		<td></td>
		{{#each contactMethods}}
			{{#if email}}
				<td class="settings-category-cell">
					<button type="button" class="btn btn-danger btn-sm remove-contact-method" data-pk="{{pk}}" data-name="{{email}}"><span class="glyphicon glyphicon-remove"></span>Remove</button>
				</td>
			{{else}}
				{{#if phoneNumber}}
					{{#if provider}}
						<td class="settings-category-cell">
							<button type="button" class="btn btn-danger btn-sm remove-contact-method" data-pk="{{pk}}" data-name="{{phoneNumber}} ({{provider}}"><span class="glyphicon glyphicon-remove"></span>Remove</button>
						</td>
					{{/if}}
				{{/if}}
			{{/if}}
		{{/each}}
	</tr>
</table></br></br>

<h3>Add a Contact Method</h3></br>

<form action="" role="form" style="width: 400px; margin: 0 auto">
	<div class="form-group">
        <label for="email">Email</label>
        <input type="text" id="email" class="form-control new-contact-method-email"/>
    </div>
    <div class="form-group">
        <label for="phoneNumber">Phone Number</label>
        <input type="text" id="phoneNumber" class="form-control new-contact-method-phone-number"/>
    </div>
    <div class="form-group">
        <label for="provider">Provider</label>
        <select id="provider" class="form-control new-contact-method-provider">
        	<option value="">Not Applicable</option>
        	{{#each providers}}
		    	<option value="{{pk}}">{{name}}</option>
		    {{/each}}
		</select>
    </div>
    <input class="btn btn-primary pull-right submit-new-contact-method" type="submit"/>
</form>
