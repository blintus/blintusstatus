<table class="contact-method-table">
	<tr>
		<td class="contact-method"></td>
		{{#each contactMethods}}
			<td class="contact-method">
				{{#if email}}
					{{email}}
				{{else}}
					{{#if phoneNumber}}
						{{#if provider}}
							{{phoneNumber}}  ({{provider}})
						{{/if}}
					{{/if}}
				{{/if}}
			</td>
		{{/each}}
	</tr>
	{{#each categories}}
		<tr>
			<td class="settings-category">{{name}}</td>
			{{#each ../contactMethods}}
				<td class="settings-category-cell"><input type="checkbox" class="settings-category-checkbox" data-contactmethodid="{{pk}}" data-categoryid="{{../pk}}"></td>
			{{/each}}
		</tr>
	{{/each}}
</table>

<form class="add-contact-methods-form">
    Email: <input type="text" class="new-contact-method-email"></br>
    Phone Number<input type="text" class="new-contact-method-phone-number"></br>
    Provider:
    <select class="new-contact-method-provider">
    	<option value="">Not Applicable</option>
	    {{#each providers}}
	    	<option value="{{pk}}">{{name}}</option>
	    {{/each}}
	</select></br>
    <input type="submit" class="submit-new-contact-method">
</form>