<table class="contact-method-table">
	<tr>
		<td class="contact-method"></td>
		{{#each contactMethods}}
			<td class="contact-method">
				{{#if email}}
					{{email}}
				{{else}}
					{{#if phoneNumber}}
						{{#if provider}}
							{{phoneNumber}}  ({{provider}})
						{{/if}}
					{{/if}}
				{{/if}}
			</td>
		{{/each}}
	</tr>
	{{#each categories}}
		<tr>
			<td class="settings-category">{{name}}</td>
			{{#each ../contactMethods}}
				<td class="settings-category-checkbox"><input type="checkbox" data-contactmethodid="{{../pk}}" data-categoryid="{{pk}}"></td>
			{{/each}}
		</tr>
	{{/each}}
</table>