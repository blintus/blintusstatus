<h3>Subscribe for updates</h3></br>
<table class="contact-method-table">
	<tr>
		<td class="contact-method"></td>
		{{#each contactMethods}}
			<td class="contact-method">
				{{#if email}}
					{{email}}
				{{else}}
					{{#if phoneNumber}}
						{{#if provider}}
							{{phoneNumber}}  ({{provider}})
						{{/if}}
					{{/if}}
				{{/if}}
			</td>
		{{/each}}
	</tr>
	{{#each categories}}
		<tr>
			<td class="settings-category">{{name}}</td>
			{{#each ../contactMethods}}
				<td class="settings-category-cell"><input type="checkbox" class="settings-category-checkbox" data-contactmethodid="{{pk}}" data-categoryid="{{../pk}}"></td>
			{{/each}}
		</tr>
	{{/each}}
</table></br></br>

<h3>Add a Contact Method</h3></br>

<table class="add-contact-methods-table">
    <tr>
    	<td class="add-contact-method-cell">Email</td><td add-contact-method-cell><input type="text" class="new-contact-method-email"></td>
    </tr>
    <tr>
    	<td class="add-contact-method-cell">Phone Number</td><td add-contact-method-cell><input type="text" class="new-contact-method-phone-number"></td>
    </tr>
    <tr>
	    <td class="add-contact-method-cell">Provider</td>
	    <td add-contact-method-cell><select class="new-contact-method-provider">
	    	<option value="">Not Applicable</option>
		    {{#each providers}}
		    	<option value="{{pk}}">{{name}}</option>
		    {{/each}}
		</select></td>
    <tr>
    	<td class="add-contact-method-cell"><input type="submit" class="submit-new-contact-method"></td>
    </tr>
</table></br></br>

<h3>Remove Contact Methods</h3></br>

<table class="delete-contact-method-table">
	{{#each contactMethods}}
		<tr><td class="remove-contact-method-cell">
		{{#if email}}
			<input type="checkbox" class="remove-contact-method-checkbox" data-pk="{{pk}}" data-name="{{email}}">
			{{email}}
		{{else}}
			{{#if phoneNumber}}
				{{#if provider}}
					<input type="checkbox" class="remove-contact-method-checkbox" data-pk="{{pk}}" data-name="{{phoneNumber}} ({{provider}}">
					{{phoneNumber}} ({{provider}})
				{{/if}}
			{{/if}}
		{{/if}}
		</td><tr>
	{{/each}}
</table>