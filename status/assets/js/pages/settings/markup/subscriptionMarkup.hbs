<h3>Subscribe for updates</h3></br>
<table class="table table-bordered table-striped table-hover subscription-table" style="margin: 0 auto">
	<thead>
		<tr>
			<th></th>
			{{#each contactMethods}}
				<th class="contact-method">
					{{#if email}}
						{{email}}
					{{else}}
						{{#if phoneNumber}}
							{{#if provider}}
								{{phoneNumber}}  ({{provider}})
							{{/if}}
						{{/if}}
					{{/if}}
				</th>
			{{/each}}
		</tr>
	</thead>
	<tbody></tbody>
	<tfoot>
		<tr>
			<td></td>
			{{#each contactMethods}}
				{{#if email}}
					<td class="settings-category-cell">
						<button type="button" class="btn btn-danger btn-sm remove-contact-method" data-pk="{{pk}}" data-name="{{email}}"><span class="glyphicon glyphicon-remove"></span>Remove</button>
					</td>
				{{else}}
					{{#if phoneNumber}}
						{{#if provider}}
							<td class="settings-category-cell">
								<button type="button" class="btn btn-danger btn-sm remove-contact-method" data-pk="{{pk}}" data-name="{{phoneNumber}} ({{provider}}"><span class="glyphicon glyphicon-remove"></span>Remove</button>
							</td>
						{{/if}}
					{{/if}}
				{{/if}}
			{{/each}}
		</tr>
	</tfoot>
</table></br></br>
<button type="button" class="btn btn-large btn-primary add-email-btn"><span class="glyphicon glyphicon-envelope"></span>  Add an Email Address</button>
<button type="button" class="btn btn-large btn-primary add-phone-number-btn"><span class="glyphicon glyphicon-earphone"></span>  Add a Phone Number</button>