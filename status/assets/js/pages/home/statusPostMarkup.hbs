<hr>
{{#each posts}}
    <div class="status-post">
        <h3 class="status-post-title">{{statusIcon status}}{{title}}</h3>
        <p class="status-post-info">Posted by {{user}} {{formatPostDate created}} | <a class="inline-category-link" data-categoryid="{{category.pk}}">{{category.name}}</a></p>
        <p>{{message}}</p>
        <a class="comments-show-link" data-postid="{{pk}}">Show Comments</a>
        <div class="comments">
            
        </div>
    </div>
    <hr>
{{/each}}